      <tr>
        <td>{{donNom}}</td>
        <td>{{donType}}</td>
        <td>{{donPoids}}</td>
        <td>{{datePeremptionFormatted}}</td>
        <td>{{donneur.raisonSociale}}</td>
        <td>{{donStatus}}</td>
        <td>
