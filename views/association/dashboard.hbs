<div>
  Dashboard ASSO
</div>


{{#each booked}}
<ul>
  <li>{{donNom}}</li>
  <li>{{donStatus}}</li>
  <li>donneur : {{donneur.raisonSociale}}</li>
  <li>preneur : {{preneur.raisonSociale}}</li>
</ul>
<form action="/asso/annule-reservation/{{_id}}" method="POST">
  <button>Annuler la réservation</button>
</form>
<form action="/asso/confirme-recuperation/{{_id}}" method="POST">
  <button>Confirmer la récupération</button>
</form>
<hr />
{{/each}}


<h2>
  Il y a dons {{nbPendingDonations}} disponibles
</h2>

<h2>
  Dons récupérés : {{nbPickedUpDonations}}
</h2>



